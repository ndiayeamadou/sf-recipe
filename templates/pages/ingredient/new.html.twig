{% extends "base.html.twig" %}

{% block title %}Add ingredient{% endblock %}
{% block body %}
<div class="container">
    <h2 class="shadow rounded mt-4">Add Ingredient</h2>
    <div class="col-6 offset-3">
        {# {{ form(form) }} #}
        
        {# OR CUSTOMIZE THE FORM LIKE THIS #}
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                <p class="form-error">{{ form_errors(form.name) }}</p>
            </div>

            <div class="form-group">
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                <p class="form-error">{{ form_errors(form.price) }}</p>
            </div>

            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
        {{ form_end(form) }}

    </div>
    {# End div col-6 #}

</div>
{% endblock %}