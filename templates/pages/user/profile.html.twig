{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<style>
</style>

<div class="container mb-5">
    <h2 class="my-4 shadow">My Profile</h3>

    {# {{dump(app.user)}} #}
    {% if app.user %}
        <h5>{{ app.user.fullname }}</h5>
        {% if app.user.pseudo %}
            <h5>{{ app.user.pseudo }}</h5>
        {% endif %}
        <h5>{{ app.user.email }}</h5>
        <a href="{{ path('user_edit', {'id': app.user.id}) }}" class="btn btn-primary mt-5">Editer mon profil<a>
        <a href="{{ path('user_pwd_edit', {'userEntity': app.user.id}) }}" class="btn btn-secondary mt-5">Changer mon mot de passe<a>
    {% endif %}

</div>
{% endblock %}
