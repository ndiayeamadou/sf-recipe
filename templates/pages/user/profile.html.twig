{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<style>
</style>

<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-dismissible alert-info">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            {{ message }}
        </div>
    {% endfor %}
    <h3 class="mt-3">My Profile</h3>

    {# {{dump(app.user)}} #}
    {% if app.user %}
        <h5>{{ app.user.fullname }}</h5>
        {% if app.user.pseudo %}
            <h5>{{ app.user.pseudo }}</h5>
        {% endif %}
        <h5>{{ app.user.email }}</h5>
        <a href="{{ path('user_edit', {'user': app.user.id}) }}" class="btn btn-primary mt-5">Editer mon profil<a>
        <a href="{{ path('user_pwd_edit', {'user': app.user.id}) }}" class="btn btn-secondary mt-5">Changer mon mot de passe<a>
    {% endif %}

</div>
{% endblock %}
