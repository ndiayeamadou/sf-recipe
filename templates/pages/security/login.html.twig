{% extends 'base.html.twig' %}

{% block title %}Sf-recipe | Login{% endblock %}

{% block body %}

<div class="container d-flex flex-column min-vh-100">
    <h2 class="shadow rounded p-2 mt-4">Login </h2>

    {% if error %}
        <small class="form-text text-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</small>
    {% endif %}

    <form method="POST" action="{{ path('security_login') }}" class="col-6 offset-3 mt-5">
        <div class="form-group">
            <label class="form-label">Email</label>
            <input type="email" name="_username" id="username" class="form-control" placeholder="example@dev.com">
        </div>
        <div class="form-group mt-3">
            <label class="form-label">Password</label>
            <input type="password" name="_password" id="password" class="form-control" placeholder="**********">
        </div>

        <input type="submit" value="Login" class="btn btn-primary mt-4 btn-lg form-control">
    </form>
    
</div>
{% endblock %}
