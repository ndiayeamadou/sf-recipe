{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container d-flex flex-column min-vh-100">

    <h1 class="mt-3 text-center">Reci<span class="text-primary">pes</span></h1>

    <div class="bg-light p-5 rounded text-center">
        <h2>Bienvenue dans votre plateforme de gestion de recettes !</h2>
        <p class=""><a href="{{ path('security_login') }}" class="text-decoration-none">
        Connectez-vous</a>, créez, partagez et profitez pleinement des recettes publiques.
        </p>
        <p class="">Si vous n'avez pas de compte, <a href="{{ path('security_register') }}" class="text-decoration-none">créez-en</a> !</p>
    </div>

    <div class="d-flex justify-content-between mt-5">
        {% for recipe in recipes %}
            <div class="card border-secondary mb-3" style="max-width: 18rem;">
                <div class="card-header">#{{ recipe.id }}{{ recipe.createdAt|date('d-m-Y') }}</div>
                <div class="card-body">
                    <h4 class="card-title">{{ recipe.name }}</h4>
                    <p class="card-text">{{ recipe.description|slice(0, 80) ~ '...' }}</p>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="mt-4 text-center">
        <a href="{{ path('recipe_public') }}" class="btn btn-primary">Voir toutes les recettes publiques</a>
    </div>

</div>
{% endblock %}